<div class="row">
	<div class="large-12 columns">
		<% if @num_reports > 0 %>
			<% @reports.each  do |report| %>
				<div class="row"  id="report_<%= report.id %>">
					<div class="large-1 columns">
						<%= image_tag("report.png") %>
					</div>
					<div class="large-7 columns">
						<%= link_to content_tag(:h5,report.title),report %>
						<%= report.short_description %>.<br> 
						Created on <%= report.created_at %> by 
					</div>
					<div class="large-4 columns">
						<%= link_to 'View', report_path(report),:class=>"button small round success" %>
						<%= link_to 'Edit', edit_report_path(report),:class=>"button small round" unless cannot? :update, report%> 
					</div>
				</div>
			<% end %>
		<% else %>
			<div class="row">
				<div class="large-12 columns">
					<div class="panel">
						<p>No reports found</p>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>

